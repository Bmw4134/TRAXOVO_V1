{
  "name": "Daily Attendance Processing",
  "description": "Automate daily attendance report processing with validation and cost calculation",
  "created": "2025-05-31T06:21:09.910653",
  "steps": [
    {
      "name": "validate_attendance",
      "type": "validate",
      "rules": [
        {
          "name": "driver_not_null",
          "column": "driver",
          "type": "not_null"
        },
        {
          "name": "hours_range",
          "column": "hours",
          "type": "range",
          "min": 0,
          "max": 24
        }
      ]
    },
    {
      "name": "calculate_metrics",
      "type": "transform",
      "operations": [
        {
          "type": "calculate_column",
          "target_column": "total_cost",
          "formula": "hours * rate"
        }
      ]
    },
    {
      "name": "summarize_by_driver",
      "type": "aggregate",
      "groupby": [
        "driver"
      ],
      "functions": {
        "hours": "sum",
        "total_cost": "sum"
      }
    }
  ],
  "input_mappings": {},
  "output_format": "excel",
  "automation_level": "full"
}